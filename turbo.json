{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {},
    "globalEnv":[
      "MONGODB_URI",
      "NEXT_PUBLIC_BACKEND_URL"
    ],
    "test": {},
    "test:e2e": {}
  }
}
